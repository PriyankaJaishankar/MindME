<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/john_jason_kuskiozivrg_unsplash">

    <TextView
        android:id="@+id/historyTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="Mood History"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/moodChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />
    <Button
        android:id="@+id/furtherToMainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Further" />
    <Button
        android:id="@+id/backToMoodSelectionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Back" />

</LinearLayout>