<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MotivationalActivity"
    android:background="#E1D3BA">

    <TextView
        android:id="@+id/thoughtTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/moodTrackingSelectionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:gravity="center"
        android:text="Let's get started with tracking your mood. Click Below!"
        android:textColor="@android:color/black"
        android:textSize="34sp" />

    <Button
        android:id="@+id/furtherToMoodTracking"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:insetLeft="0dp"
        android:text="Let's Go!"
        android:textSize="34sp" />
</LinearLayout>
