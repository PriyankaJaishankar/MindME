<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/kenrick_mills_hu8h6yajyb0_unsplash">

    <Button
        android:id="@+id/BreathingExercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breathing Exercises"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/BodyScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body Scan"
        android:layout_below="@id/BreathingExercises"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/MindfulWalking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mindful Walking"
        android:layout_below="@id/BodyScan"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

