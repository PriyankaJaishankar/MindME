    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1D3BA"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add a TextView to display the question -->
    <TextView
        android:id="@+id/feelingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Wie geht es Ihnen heute?"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp" />

    <!-- Add a GridLayout to hold the mood options -->
    <GridLayout
        android:id="@+id/moodGridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alignmentMode="alignMargins"
        android:columnCount="4"
        android:columnOrderPreserved="false"
        android:rowCount="5">

        <!-- Add Button views for each mood option -->
        <Button
            android:id="@+id/happyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:text="Glücklich😄"
            android:textSize="20sp" />

        <!-- Add buttons for the rest of the mood options -->
        <Button
            android:id="@+id/sadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:text="Traurig😢"
            android:textSize="20sp" />

        <Button
            android:id="@+id/normalEmotionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:text="Normal😐"
            android:textSize="20sp" />

        <Button
            android:id="@+id/satisfiedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:text="Zufrieden😊"
            android:textSize="20sp" />

        <Button
            android:id="@+id/calmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:text="Ruhig😌"
            android:textSize="20sp" />

        <Button
            android:id="@+id/frustratedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:text="Frustriert😠"
            android:textSize="20sp" />

        <Button
            android:id="@+id/anxiousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:text="Ängstlich😟"
            android:textSize="20sp" />

        <Button
            android:id="@+id/angryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:text="Wütend😡"
            android:textSize="20sp" />

        <Button
            android:id="@+id/lonelyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:text="Einsam😔"
            android:textSize="20sp" />

        <Button
            android:id="@+id/tiredButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:text="Müde😫"
            android:textSize="20sp" />

        <Button
            android:id="@+id/boredButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Langweilig😒"
            android:textSize="20sp"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/sleepyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:text="Schläfrig😴"
            android:textSize="20sp" />

    </GridLayout>

    <!-- Add an Apply button -->
    <Button
        android:id="@+id/applyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="Bestätigen"
        android:textSize="20sp"
        android:textStyle="normal" />

    <!-- Add a TextView to display the selected mood -->
    <TextView
        android:id="@+id/selectedMoodTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:text="Wählen Sie eine Option und klicken Sie auf Bestätigen!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp" />

    <!-- Add a TextView to display the corresponding message -->
    <TextView
        android:id="@+id/moodInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="34sp" />

    <!-- Add a "View History" button -->
        <Button
            android:id="@+id/viewHistoryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"
            android:text="Verlauf anzeigen"
            android:textSize="20sp" />

</LinearLayout>