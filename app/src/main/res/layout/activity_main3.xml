<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/manifet_chill"
    android:padding="30dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView

        android:layout_margin="10dp"
        android:textSize="60dp"
        android:textStyle="bold"
        android:layout_marginVertical="167dp"
        android:layout_marginHorizontal="87dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How Is Your Feeling Today?" />
    <RadioGroup
        android:id="@+id/moodRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/happyButton"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy"/>
        <RadioButton
            android:id="@+id/satisfactionButton"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satisfaction"/>
        <RadioButton
            android:id="@+id/normalButton"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"/>
        <RadioButton
            android:id="@+id/sadButton"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sad"/>
        <RadioButton
            android:id="@+id/angryButton"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angry"/>


    </RadioGroup>

    <Button

        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Apply"/>



</LinearLayout>
